<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ResultMain"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/vg_bk"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg" >

        <ImageView
            android:src="@drawable/pessoa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp"
            app:tint="@color/white"
            tools:ignore="ContentDescription">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Calculadora IMC"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/texto"
            android:text="Abaixo, o seu resultado e classificação."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="18dp"
            android:textSize="14dp"
            tools:ignore="HardcodedText,SpUsage" >
        </TextView>

        <TextView
            android:id="@+id/txtRespIMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="70dp"
            android:maxLength="6"
            android:layout_marginBottom="40dp"
            tools:text="resp calc IMC"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <TextView
        android:id="@+id/vlrPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:textSize="17sp"
        tools:text="peso" />

    <TextView
        android:id="@+id/vlrAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="35dp"
        tools:text="altura" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="17sp"
        android:text="sua classificação IMC"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtClassf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="NORMAL" />
</LinearLayout>